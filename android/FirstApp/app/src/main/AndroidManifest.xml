<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polimi.giovanni.firstapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/hello"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.activities.MainActivity"></activity>
        <activity android:name=".app.activities.ResultActivity" />
        <activity android:name=".app.activities.ConstraintActivity">
        </activity>
        <activity
            android:name=".app.activities.MoviesActivity"
            android:label="@string/title_activity_movies"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>